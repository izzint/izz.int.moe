<h3 class="header">> blog posts</h3><br>

{%- for post in collections.posts -%}
  <div class="goodie">
    <a href="{{post.url}}">{{post.data.title}}</a><hr>
    <p>{{post.data.description}}</p>
    <small><i>{{ post.date | shortDate }}</i></small>
    {%- for tag in post.data.tags -%}
      <small><a href="/tags/{{ tag }}"> {{ tag }}</a></small>
    {%- endfor -%}
  </div>
{%- endfor -%}